<!DOCTYPE html>
<html lang="zh-CN">
    <head>
        <% include meta.ejs %>
        <link rel="stylesheet" href="/css/gallery.css">
        <script src="/js/drag.js"></script>
    </head>
    <body>
        <div id="loader"></div>
        <div class="top-header">
            <a class="logo-a" href=".">
                <img src="/images/server-logo.png">
            </a>
            <div class="group-div">
                <a class="btn-a loading" href="/"><i class="fa fa-home"></i> 主页</a>
                <a class="btn-a loading" href="/gallery"><i class="fa fa-th-large"></i> 画廊</a>
                <a class="btn-a"><i class="fa fa-download"></i> 下载</a>
                <a class="btn-a"><i class="fa fa-comments"></i> 博客</a>
            </div>
        </div>
        <div id="gallery-div">
            <% gallerys.forEach(function(gallery){ %>
            <dl>
                <i class='hander fa fa-thumb-tack'></i>
                <div class="single-member album">
                    <div class="member-image">
                        <img src="<%= gallery.cover %>" alt="Member">
                    </div>
                    <div class="member-info">
                        <h3><%= gallery.name %></h3>
                        <h5><%= gallery.author %></h5>
                        <p><%= gallery.discription %></p>
                        <div class="social-touch">
                            <a class="fb-touch"></a>
                            <a class="gallery-touch" gallery-id="<%= gallery.id %>"></a>
                            <a class="linkedin-touch"></a>
                        </div>
                    </div>
                </div>
            </dl>
            <% })%>
        </div>

        <div class="modal fade" id="gallery-modal" tabindex="-1" aria-hidden="true" style="display: none">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div id="gallery-carousel" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="http://ww4.sinaimg.cn/large/69be9abejw1faygg9j052j21hc0u0tlm.jpg">
                                </div>
                                <div class="item">
                                    <img src="http://ww4.sinaimg.cn/large/69be9abejw1fayggf7tv0j21hc0u0qn0.jpg">
                                </div>
                                <div class="item">
                                    <img src="http://ww1.sinaimg.cn/large/69be9abejw1fayggkpmd7j21hc0u07rr.jpg">
                                </div>
                                <div class="item">
                                    <img src="http://ww4.sinaimg.cn/large/69be9abejw1faygg5tol7j21hc0u01cf.jpg">
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control left" href="#gallery-carousel" data-slide="prev">
                            <i class="fa fa-arrow-circle-left"></i>
                        </a>
                        <a class="carousel-control right" href="#gallery-carousel" data-slide="next">
                            <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <script src="/js/base.js"></script>
        <script src="/js/gallery.js"></script>
    </body>
</html>
